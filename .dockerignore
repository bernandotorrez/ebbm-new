# Optimized .dockerignore for Laravel Filament 3
# This improves build performance by excluding unnecessary files

# ==============================================
# Version Control & Git
# ==============================================
.git/
.gitignore
.gitattributes
.gitkeep
.gitmodules

# ==============================================
# IDE and Editor Files
# ==============================================
.vscode/
.idea/
*.swp
*.swo
*~
.editorconfig

# ==============================================
# OS Generated Files
# ==============================================
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# ==============================================
# Laravel Specific (Runtime/Cache)
# ==============================================
# Node modules (will be installed in container)
/node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json
yarn.lock

# Laravel storage (preserve structure, exclude content)
/storage/logs/*.log
/storage/framework/cache/data/*
/storage/framework/sessions/*
/storage/framework/views/*.php
/storage/app/*
!/storage/app/.gitignore
!/storage/app/public/
/storage/app/public/*
!/storage/app/public/.gitignore

# Bootstrap cache (will be generated)
/bootstrap/cache/*.php
!/bootstrap/cache/.gitignore

# ==============================================
# Environment & Config
# ==============================================
.env
.env.*
!.env.example
!.env.production

# ==============================================
# Build & Assets (Generated)
# ==============================================
/public/hot
/public/storage
/public/mix-manifest.json
/public/js/
/public/css/
/public/build/
/public/vendor/

# ==============================================
# Development & Testing
# ==============================================
/tests/
/phpunit.xml
.phpunit.result.cache
coverage/
.nyc_output/

# ==============================================
# Documentation & README
# ==============================================
README.md
*.md
!DOCKER_*.md
docs/

# ==============================================
# Docker & Deployment (when building)
# ==============================================
Dockerfile
docker-compose*.yml
.dockerignore
deploy.sh
deploy.bat

# ==============================================
# Backup & Temporary Files
# ==============================================
*.bak
*.backup
*.old
*.orig
*.original
*.tmp
*.log
logs/
tmp/
temp/
.tmp/

# ==============================================
# Database & SQL Files
# ==============================================
*.sql
*.sqlite
*.db
database.sqlite

# ==============================================
# Composer (vendor will be installed in container)
# ==============================================
# Keep composer.json and composer.lock for dependency installation
# /vendor/ is commented out because we need it for the build

# ==============================================
# Security & Sensitive Files
# ==============================================
.ssh/
*.pem
*.key
*.crt
secrets/

# ==============================================
# Laravel Specific Generated Files
# ==============================================
_ide_helper.php
_ide_helper_models.php
.phpstorm.meta.php