# Optimized MySQL Configuration for Laravel Filament 3
# Tuned for performance with Docker containers

[mysql]
default-character-set = utf8mb4

[mysqld]
# ==============================================
# Basic Settings
# ==============================================
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
datadir = /var/lib/mysql
tmpdir = /tmp
basedir = /usr

# ==============================================
# Character Set and Collation
# ==============================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'
skip-character-set-client-handshake

# ==============================================
# Security Settings
# ==============================================
bind-address = 0.0.0.0
skip-name-resolve
skip-host-cache
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION

# ==============================================
# Performance Tuning - Memory Allocation
# ==============================================
# InnoDB Buffer Pool (75% of available memory)
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 2
innodb_buffer_pool_chunk_size = 128M

# InnoDB Log Files
innodb_log_file_size = 128M
innodb_log_files_in_group = 2
innodb_log_buffer_size = 32M

# Sort and Join Buffers
innodb_sort_buffer_size = 2M
sort_buffer_size = 1M
join_buffer_size = 1M
read_buffer_size = 1M
read_rnd_buffer_size = 2M

# ==============================================
# Connection Management
# ==============================================
max_connections = 200
max_connect_errors = 1000
max_user_connections = 190
connect_timeout = 30
wait_timeout = 600
interactive_timeout = 600
net_read_timeout = 30
net_write_timeout = 30

# ==============================================
# Query Cache (Disabled for MySQL 8.0+)
# ==============================================
# query_cache_type = 0
# query_cache_size = 0

# ==============================================
# Buffer Sizes
# ==============================================
key_buffer_size = 16M
max_allowed_packet = 64M
thread_stack = 256K
thread_cache_size = 16
myisam_sort_buffer_size = 64M

# ==============================================
# Table and File Settings
# ==============================================
table_open_cache = 2048
table_definition_cache = 1024
open_files_limit = 32768
max_heap_table_size = 32M
tmp_table_size = 32M

# ==============================================
# InnoDB Specific Settings
# ==============================================
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 2
innodb_lock_wait_timeout = 60
innodb_io_capacity = 1000
innodb_io_capacity_max = 2000
innodb_thread_concurrency = 0
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_flush_neighbors = 0
innodb_checksum_algorithm = crc32
innodb_doublewrite = 1
innodb_support_xa = 1
innodb_strict_mode = 1

# InnoDB Adaptive Hash Index
innodb_adaptive_hash_index = 1
innodb_adaptive_hash_index_parts = 8

# ==============================================
# Binary Logging (for Replication)
# ==============================================
log-bin = mysql-bin
binlog_format = ROW
binlog_row_image = MINIMAL
expire_logs_days = 3
max_binlog_size = 100M
binlog_cache_size = 1M
sync_binlog = 0

# ==============================================
# Logging Configuration
# ==============================================
# Error log
log-error = /var/log/mysql/error.log
log_error_verbosity = 2

# Slow query log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1
min_examined_row_limit = 1000
log_queries_not_using_indexes = 0
log_slow_admin_statements = 1
log_slow_slave_statements = 1

# General log (disabled in production)
general_log = 0
# general_log_file = /var/log/mysql/general.log

# ==============================================
# Replication Settings (if needed)
# ==============================================
server-id = 1
# gtid_mode = ON
# enforce_gtid_consistency = ON
# log_slave_updates = 1

# ==============================================
# MyISAM Settings (legacy support)
# ==============================================
myisam_recover_options = BACKUP,FORCE
concurrent_insert = 2
delay_key_write = ON

# ==============================================
# Security and Limits
# ==============================================
local_infile = 0
max_execution_time = 30000
max_statement_time = 30000

[mysqldump]
quick
lock-tables = false
single-transaction
max_allowed_packet = 64M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 16M
sort_buffer_size = 16M
read_buffer = 8M
write_buffer = 8M

[mysqlhotcopy]
interactive-timeout